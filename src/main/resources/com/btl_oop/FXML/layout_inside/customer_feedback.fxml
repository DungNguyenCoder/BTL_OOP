<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.btl_oop.Controller.ComponentController.CustomerFeedbackController"
      stylesheets="@../../css/Main/customer_feedback.css"
      styleClass="root">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" styleClass="header">
        <children>
            <Label text="Customer Feedback" styleClass="title" />
        </children>
    </HBox>

    <!-- Content -->
    <ScrollPane fitToWidth="true" styleClass="content-scroll" VBox.vgrow="ALWAYS">
        <content>
            <VBox>
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20" />
                </padding>

                <!-- Feedback Cards Grid -->
                <FlowPane fx:id="feedbackContainer"
                          hgap="20"
                          vgap="20"
                          styleClass="feedback-grid">
                    <!-- Feedback cards will be loaded dynamically -->
                </FlowPane>
            </VBox>
        </content>
    </ScrollPane>
</VBox>