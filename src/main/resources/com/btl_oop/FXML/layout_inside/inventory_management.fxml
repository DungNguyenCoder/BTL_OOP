                                            <Label text="Macarons" styleClass="product-name" />
                                            <Label text="Erat ipsum justo amet duo et elitr dolor, est duo duo eos lorem sed diam stet diam sed stet lorem."
                                                   styleClass="product-description" wrapText="true" />
                                            <HBox alignment="CENTER_LEFT" spacing="10">
                                                <children>
                                                    <Label text="Edit Info" styleClass="edit-link" />
                                                    <Region HBox.hgrow="ALWAYS" />
                                                    <Label text="12.00" styleClass="product-price" />
                                                </children>
                                            </HBox>
                                        </children>
                                    </VBox>
                                </children>
                            </VBox>
                        </FlowPane>
                    </children>
                </VBox>

            </VBox>
        </content>
    </ScrollPane>
</VBox>