                    <HBox alignment="CENTER_LEFT" spacing="6">
                        <children>
                            <Label text="+" styleClass="add-icon" />
                            <Label text="Add new" styleClass="add-text" />
                        </children>
                    </HBox>
                </graphic>
            </Button>
        </children>
    </VBox>

    <ScrollPane fitToWidth="true" styleClass="content-scroll" VBox.vgrow="ALWAYS">
        <content>
            <VBox spacing="25">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20" />
                </padding>

                <VBox spacing="15">
                    <children>
                        <Label text="All Categories" styleClass="section-title" />

                        <FlowPane fx:id="categoriesPane" hgap="15" vgap="15" styleClass="categories-grid">
                            <VBox styleClass="category-card">
                                <children>
                                    <ImageView fitHeight="120" fitWidth="120" preserveRatio="false">
                                        <image>
                                            <Image url="@../../img/category_item/category_snack.png" />
                                        </image>
                                    </ImageView>
                                    <Label text="Snack" styleClass="category-name" />
                                </children>
                            </VBox>

                            <VBox styleClass="category-card">
                                <children>
                                    <ImageView fitHeight="120" fitWidth="120" preserveRatio="false">
                                        <image>
                                            <Image url="@../../img/category_item/category_meal.png" />
                                        </image>
                                    </ImageView>
                                    <Label text="Meal" styleClass="category-name" />
                                </children>
                            </VBox>

                            <VBox styleClass="category-card">
                                <children>
                                    <ImageView fitHeight="120" fitWidth="120" preserveRatio="false">
                                        <image>
                                            <Image url="@../../img/category_item/category_vegan.png" />
