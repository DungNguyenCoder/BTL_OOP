<VBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.btl_oop.Controller.MainController.InventoryManagementController"
      stylesheets="@../../css/Main/inventory.css"
      styleClass="root">

    <VBox styleClass="header">
        <children>
            <Label text="Inventory Management" styleClass="title" />

            <Button styleClass="add-button" onAction="#handleAddNew">
