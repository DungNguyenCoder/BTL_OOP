<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.TextField?>
<AnchorPane prefHeight="900.0" prefWidth="250.0" styleClass="order-summary-container" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.btl_oop.Controller.Order.OrderSummaryController">

    <HBox alignment="CENTER_LEFT" layoutX="0" layoutY="0" prefWidth="250" styleClass="summary-header-box" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <padding>
            <Insets top="20" right="20" bottom="15" left="20" />
        </padding>

        <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
            <Label styleClass="summary-title" text="Order Summary">
                <font>
                    <Font name="System Bold" size="16" />
                </font>
            </Label>
            <Label fx:id="tableNumber" styleClass="summary-table" text="Table 4">
                <font>
                    <Font size="13" />
                </font>
                <VBox.margin>
                    <Insets top="2" />
                </VBox.margin>
            </Label>

            <!-- ✅ THÊM TEXTFIELD ĐỂ NHẬP TABLE NUMBER -->
            <HBox alignment="CENTER_LEFT" spacing="8">
                <Label text="Table:" styleClass="summary-table">
                    <font>
                        <Font size="13" />
                    </font>
                </Label>
                <TextField fx:id="tableNumberField" promptText="Enter table" prefWidth="60" styleClass="table-input">
                    <font>
                        <Font size="12" />
                    </font>
                </TextField>
            </HBox>
        </VBox>



        <Button fx:id="clearAllButton" onAction="#clearAll" styleClass="clear-all-button" text="Clear All">
            <font>
                <Font size="12" />
            </font>
        </Button>
    </HBox>

    <Region layoutX="0" layoutY="70" prefHeight="1" prefWidth="250" styleClass="summary-divider" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="70" />

    <ScrollPane layoutX="0" layoutY="71" prefWidth="250" fitToWidth="true" styleClass="order-items-scroll" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="71" AnchorPane.bottomAnchor="200">
        <VBox fx:id="orderItemsList" spacing="15" styleClass="order-items-container">
            <padding>
                <Insets top="15" right="15" bottom="15" left="20" />
            </padding>
        </VBox>
    </ScrollPane>

    <VBox layoutX="0" prefWidth="250" styleClass="summary-footer-box" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        <padding>
            <Insets top="15" right="20" bottom="20" left="20" />
        </padding>

        <Region styleClass="summary-divider">
            <VBox.margin>
                <Insets bottom="15" />
            </VBox.margin>
        </Region>

        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label styleClass="summary-label" text="Subtotal:" HBox.hgrow="ALWAYS">
                <font>
                    <Font size="14" />
                </font>
            </Label>
            <Label fx:id="subtotalLabel" styleClass="summary-value" text="0.00">
                <font>
                    <Font size="14" />
                </font>
            </Label>
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10">
            <VBox.margin>
                <Insets top="8" />
            </VBox.margin>
            <Label styleClass="summary-label" text="Tax (10%):" HBox.hgrow="ALWAYS">
                <font>
                    <Font size="14" />
                </font>
            </Label>
            <Label fx:id="taxLabel" styleClass="summary-value" text="0.00">
                <font>
                    <Font size="14" />
                </font>
            </Label>
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10">
            <VBox.margin>
                <Insets top="12" bottom="15" />
            </VBox.margin>
            <Label styleClass="summary-label-bold" text="Total:" HBox.hgrow="ALWAYS">
                <font>
                    <Font name="System Bold" size="15" />
                </font>
            </Label>
            <Label fx:id="totalLabel" styleClass="summary-total" text="0.00">
                <font>
                    <Font name="System Bold" size="16" />
                </font>
            </Label>
        </HBox>

        <Button fx:id="reviewOrderButton" onAction="#confirmOrder" maxWidth="Infinity" styleClass="review-order-button" text="Review Order (0 items)">
            <font>
                <Font name="System Bold" size="13" />
            </font>
        </Button>
    </VBox>

</AnchorPane>