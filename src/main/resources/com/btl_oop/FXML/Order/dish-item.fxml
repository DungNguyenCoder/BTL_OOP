<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="150" prefWidth="250" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-background-radius: 10; -fx-border-radius: 10;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.btl_oop.Controller.Order.DishItemController">
    <children>
        <VBox layoutX="10" layoutY="10" spacing="5">
            <Label fx:id="dishName" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
            <Label fx:id="dishPrice" style="-fx-text-fill: #333;" />
            <Label fx:id="dishDescription" style="-fx-text-fill: #555; -fx-font-size: 12px;" wrapText="true" />
         <HBox>
            <children>
               <Label text="Time: " />
                  <Label fx:id="dishPrepareTime" style="-fx-text-fill: #555; -fx-font-size: 12px;" wrapText="true" />
            </children>
         </HBox>

            <HBox fx:id="addBox" alignment="CENTER">
                <Button fx:id="addButton" onAction="#onAddToOrder" style="-fx-background-color: #111; -fx-text-fill: white; -fx-background-radius: 8;" text="+ Add to Order" />
            </HBox>

            <HBox fx:id="quantityBox" alignment="CENTER" managed="false" spacing="5" visible="false">
                <Button onAction="#decreaseQuantity" text="-" />
                <Label fx:id="quantityLabel" text="1" />
                <Button onAction="#increaseQuantity" text="+" />
                <Button onAction="#confirmQuantity" text="âœ”" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
