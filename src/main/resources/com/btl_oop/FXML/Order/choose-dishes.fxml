<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="900.0" prefWidth="1600.0" styleClass="root" stylesheets="@../../css/Waiter/choose_dishes_style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.btl_oop.Controller.Waiter.WaiterMainController">

   <top>
      <VBox styleClass="header-container">
         <HBox alignment="CENTER_LEFT" styleClass="header-top">
            <Button fx:id="btnBack" onAction="#goBack" styleClass="back-button" text="â† Back">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Button>
            <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
               <Label fx:id="tableLabel" styleClass="table-title" text="Welcome To Menu">
                  <font>
                     <Font name="System Bold" size="24.0" />
                  </font>
               </Label>
               <Label styleClass="table-subtitle" text="Select items for your order">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </VBox>
         </HBox>

         <HBox alignment="CENTER_LEFT" styleClass="search-container">
            <TextField fx:id="searchField" promptText="ðŸ” Search menu items..." styleClass="search-field" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="20.0" right="20.0" />
               </HBox.margin>
            </TextField>
         </HBox>
      </VBox>
   </top>

   <left>
      <ScrollPane fitToWidth="true" styleClass="sidebar-scroll">
         <VBox styleClass="sidebar-container" spacing="5.0">
            <padding>
               <Insets top="10.0" bottom="10.0" left="10.0" right="10.0" />
            </padding>

            <Button fx:id="btnSnack" onAction="#filterByCategory" styleClass="category-button, category-active">
               <graphic>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <ImageView styleClass="category-icon-img" fitWidth="24" fitHeight="24" preserveRatio="true">
                        <image>
                           <Image url="@../../img/ic_item/ic_snack.png" />
                        </image>
                     </ImageView>
                     <VBox alignment="CENTER_LEFT">
                        <Label styleClass="category-name" text="Snack" />
                        <Label fx:id="lblAppetizersCount" styleClass="category-count" text="0 items" />
                     </VBox>
                  </HBox>
               </graphic>
            </Button>

            <Button fx:id="btnMeal" onAction="#filterByCategory" styleClass="category-button">
               <graphic>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <ImageView styleClass="category-icon-img" fitWidth="24" fitHeight="24" preserveRatio="true">
                        <image>
                           <Image url="@../../img/ic_item/ic_meal.png" />
                        </image>
                     </ImageView>
                     <VBox alignment="CENTER_LEFT">
                        <Label styleClass="category-name" text="Meal" />
                        <Label fx:id="lblSoupsCount" styleClass="category-count" text="0 items" />
                     </VBox>
                  </HBox>
               </graphic>
            </Button>

            <Button fx:id="btnVegan" onAction="#filterByCategory" styleClass="category-button">
               <graphic>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <ImageView styleClass="category-icon-img" fitWidth="24" fitHeight="24" preserveRatio="true">
                        <image>
                           <Image url="@../../img/ic_item/ic_vegan.png" />
                        </image>
                     </ImageView>
                     <VBox alignment="CENTER_LEFT">
                        <Label styleClass="category-name" text="Vegan" />
                        <Label fx:id="lblSaladsCount" styleClass="category-count" text="0 items" />
                     </VBox>
                  </HBox>
               </graphic>
            </Button>

            <Button fx:id="btnDessert" onAction="#filterByCategory" styleClass="category-button">
               <graphic>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <ImageView styleClass="category-icon-img" fitWidth="24" fitHeight="24" preserveRatio="true">
                        <image>
                           <Image url="@../../img/ic_item/ic_dessert.png" />
                        </image>
                     </ImageView>
                     <VBox alignment="CENTER_LEFT">
                        <Label styleClass="category-name" text="Dessert" />
                        <Label fx:id="lblBurgersCount" styleClass="category-count" text="0 items" />
                     </VBox>
                  </HBox>
               </graphic>
            </Button>

            <Button fx:id="btnDrink" onAction="#filterByCategory" styleClass="category-button">
               <graphic>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <ImageView styleClass="category-icon-img" fitWidth="24" fitHeight="24" preserveRatio="true">
                        <image>
                           <Image url="@../../img/ic_item/ic_drink.png" />
                        </image>
                     </ImageView>
                     <VBox alignment="CENTER_LEFT">
                        <Label styleClass="category-name" text="Drink" />
                        <Label fx:id="lblSteaksCount" styleClass="category-count" text="0 items" />
                     </VBox>
                  </HBox>
               </graphic>
            </Button>
         </VBox>
      </ScrollPane>
   </left>

   <center>
      <VBox styleClass="content-container">
         <HBox alignment="CENTER_LEFT" styleClass="category-header">
            <ImageView fx:id="currentCategoryIcon" styleClass="category-icon-large" fitWidth="40" fitHeight="40" preserveRatio="true">
               <image>
                  <Image url="@../../img/ic_item/ic_snack.png" />
               </image>
            </ImageView>
            <VBox alignment="CENTER_LEFT">
               <Label fx:id="categoryTitle" styleClass="category-title" text="Snack">
                  <font>
                     <Font name="System Bold" size="22.0" />
                  </font>
               </Label>
               <Label fx:id="itemsAvailable" styleClass="items-available" text="0 items available">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
            </VBox>
            <padding>
               <Insets top="15.0" left="20.0" bottom="15.0" />
            </padding>
         </HBox>

         <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="dishes-scroll">
            <GridPane fx:id="dishesGrid" hgap="20.0" vgap="20.0" styleClass="dishes-grid">
               <padding>
                  <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
               </padding>
            </GridPane>
         </ScrollPane>
      </VBox>
   </center>

   <right>
      <fx:include fx:id="orderSummary" source="order-summary.fxml" managed="false" visible="false" />
   </right>
</BorderPane>