<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.btl_oop.Controller.Admin.ComponentController.OrderItemController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="90.0" spacing="15" styleClass="order-item" stylesheets="@../../../css/Admin/main_layout.css">
          <children>
              <ImageView fx:id="avatarImage" fitHeight="60.0" fitWidth="60.0" preserveRatio="true" />
      
              <VBox spacing="6" styleClass="order-info" HBox.hgrow="ALWAYS">
                  <children>
                      <Label fx:id="orderIdLabel" styleClass="order-id" text="Order id: 1001" />
                      <Label fx:id="statusLabel" style="-fx-background-color: #c8f7dc; -fx-padding: 4 10; -fx-background-radius: 5; -fx-font-size: 11px;" text="Delivered" />
                      <Label fx:id="customerNameLabel" style="-fx-font-size: 12px; -fx-text-fill: #666;" text="Customer Name" />
                      <Label fx:id="totalPriceLabel" styleClass="order-price" text="Total : $0.00" />
                  </children>
              </VBox>
      
              <Button fx:id="detailsButton" styleClass="details-button" text="Details" />
          </children>
      </HBox>
   </children>
</VBox>
