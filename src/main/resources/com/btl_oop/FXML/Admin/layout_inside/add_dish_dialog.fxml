<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.btl_oop.Controller.Admin.MainController.AddDishDialogController"
            prefWidth="620" prefHeight="560"
            styleClass="dialog-root"
            stylesheets="@../../../css/Admin/add_dish_dialog.css">

    <top>
        <VBox spacing="0" BorderPane.alignment="CENTER_LEFT">
            <children>
                <!-- Title bar -->
                <HBox styleClass="title-bar" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="12" right="16" bottom="12" left="16"/>
                    </padding>
                    <Label text="Add New inventory" styleClass="title-text"/>
                </HBox>

                <!-- Back Home button -->
                <HBox alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="16" right="20" bottom="0" left="20"/>
                    </padding>
                    <Button text="Back Home" styleClass="back-button" onAction="#handleCancel"/>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <HBox spacing="30" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>

            <!-- Left side: Form fields -->
            <VBox spacing="20" styleClass="form-container" HBox.hgrow="NEVER" prefWidth="260">
                <children>
                    <!-- Item name -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Item name :" styleClass="form-label" prefWidth="95"/>
                        <TextField fx:id="nameField" styleClass="form-field" prefWidth="150"/>
                    </HBox>

                    <!-- Category -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Category :" styleClass="form-label" prefWidth="95"/>
                        <TextField fx:id="categoryField" styleClass="form-field" prefWidth="150"/>
                    </HBox>

                    <!-- Price -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Price :" styleClass="form-label" prefWidth="95"/>
                        <TextField fx:id="priceField" styleClass="form-field" prefWidth="150"/>
                    </HBox>

                    <!-- Description -->
                    <VBox spacing="8" VBox.vgrow="ALWAYS">
                        <StackPane styleClass="description-container" VBox.vgrow="ALWAYS">
                            <Label text="Description" styleClass="description-label" StackPane.alignment="TOP_LEFT">
                                <StackPane.margin>
                                    <Insets top="12" left="12"/>
                                </StackPane.margin>
                            </Label>
                            <TextArea fx:id="descriptionArea"
                                      wrapText="true"
                                      styleClass="description-area">
                                <StackPane.margin>
                                    <Insets top="40" right="12" bottom="12" left="12"/>
                                </StackPane.margin>
                            </TextArea>
                        </StackPane>
                    </VBox>

                    <!-- Upload button -->
                    <HBox alignment="CENTER_LEFT">
                        <Button fx:id="uploadButton" text="Upload" onAction="#handleUpload" styleClass="upload-button"/>
                    </HBox>
                </children>
            </VBox>

            <!-- Right side: Image preview -->
            <VBox spacing="0" alignment="TOP_CENTER" prefWidth="260" prefHeight="400">
                <StackPane styleClass="image-container" prefWidth="260" prefHeight="250" onMouseClicked="#handleSelectImage">
                    <ImageView fx:id="previewImage"
                               fitWidth="260"
                               fitHeight="250"
                               preserveRatio="true"
                               pickOnBounds="true"/>
                </StackPane>
            </VBox>
        </HBox>
    </center>
</BorderPane>