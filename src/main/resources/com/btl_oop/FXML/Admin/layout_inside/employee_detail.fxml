<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<VBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.btl_oop.Controller.Admin.MainController.EmployeeDetailController"
      stylesheets="@../../../css/Admin/customer_detail.css"
      styleClass="root">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" styleClass="header">
        <padding>
            <Insets top="20" right="25" bottom="20" left="25" />
        </padding>
        <children>
            <Label text="Employee Details" styleClass="page-title" />
        </children>
    </HBox>

    <!-- Content -->
    <ScrollPane fitToWidth="true" styleClass="content-scroll" VBox.vgrow="ALWAYS">
        <content>
            <VBox spacing="20">
                <padding>
                    <Insets top="25" right="25" bottom="25" left="25" />
                </padding>

                <!-- Stats Cards -->

                <!-- All Customers Section -->
                <VBox styleClass="customers-card" spacing="20">
                    <children>
                        <!-- Header with Add Button and Search -->
                        <HBox alignment="CENTER_LEFT" spacing="15">
                            <children>
                                <Label text="All Employees" styleClass="section-title" />
                                <Label text="Active Members" styleClass="active-members-badge" />

                                <Region HBox.hgrow="ALWAYS" />

                                <!-- Search Box -->
                                <HBox styleClass="search-box" alignment="CENTER_LEFT" spacing="8">
                                    <children>
                                        <SVGPath content="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                                 styleClass="search-icon" />
                                        <TextField fx:id="searchField"
                                                   promptText="Search"
                                                   styleClass="search-field" />
                                    </children>
                                </HBox>

                            </children>
                        </HBox>

                        <!-- Table Header -->
                        <HBox spacing="20" styleClass="table-header">
                            <padding>
                                <Insets top="12" right="20" bottom="12" left="20" />
                            </padding>
                            <children>
                                <Label text="Customer Name" styleClass="header-cell"
                                       HBox.hgrow="ALWAYS" minWidth="150" prefWidth="150" maxWidth="Infinity" />
                                <Label text="Phone Number" styleClass="header-cell"
                                       HBox.hgrow="ALWAYS" minWidth="120" prefWidth="120" maxWidth="Infinity" />
                                <Label text="Email" styleClass="header-cell"
                                       HBox.hgrow="ALWAYS" minWidth="180" prefWidth="180" maxWidth="Infinity" />
                                <Label text="Language" styleClass="header-cell"
                                       HBox.hgrow="ALWAYS" minWidth="100" prefWidth="100" maxWidth="Infinity" />
                                <Label text="Status" styleClass="header-cell"
                                       minWidth="80" prefWidth="80" maxWidth="80" />
                            </children>
                        </HBox>

                        <!-- Customer List -->
                        <VBox fx:id="customerListContainer" spacing="0" styleClass="customer-list">
                            <!-- Customer rows will be loaded dynamically -->
                        </VBox>

                        <!-- Pagination -->
                        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="pagination">
                            <children>
                                <Label fx:id="paginationLabel" text="Showing data 1 to 8 of 256 entries"
                                       styleClass="pagination-info" />
                                <Region HBox.hgrow="ALWAYS" />
                                <HBox fx:id="paginationButtonsContainer" spacing="6" styleClass="pagination-buttons">
                                    <!-- Pagination buttons will be generated dynamically -->
                                </HBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </VBox>
        </content>
    </ScrollPane>
</VBox>