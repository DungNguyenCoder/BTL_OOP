<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<VBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.btl_oop.Controller.Admin.MainController.CustomerDetailController"
      stylesheets="@../../../css/Admin/customer_detail.css"
      styleClass="root">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" styleClass="header">
        <padding>
            <Insets top="20" right="25" bottom="20" left="25" />
        </padding>
        <children>
            <Label text="Customer Details" styleClass="page-title" />
        </children>
    </HBox>

    <!-- Content -->
    <ScrollPane fitToWidth="true" styleClass="content-scroll" VBox.vgrow="ALWAYS">
        <content>
            <VBox spacing="20">
                <padding>
                    <Insets top="25" right="25" bottom="25" left="25" />
                </padding>

                <!-- Stats Cards -->
                <HBox spacing="15" styleClass="stats-row">
                    <children>
                        <!-- Total Customers -->
                        <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="15">
                                    <children>
                                        <VBox styleClass="stat-icon teal">
                                            <children>
                                                <SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                                                         styleClass="icon-path" />
                                            </children>
                                        </VBox>
                                        <VBox spacing="3">
                                            <children>
                                                <Label text="Total Customers" styleClass="stat-label" />
                                                <Label fx:id="totalCustomersLabel" text="5,423" styleClass="stat-value" />
                                                <Label text="↑ 16% this month" styleClass="stat-change positive" />
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Members -->
                        <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="15">
                                    <children>
                                        <VBox styleClass="stat-icon teal-light">
                                            <children>
                                                <SVGPath content="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3z"
                                                         styleClass="icon-path" />
                                            </children>
                                        </VBox>
                                        <VBox spacing="3">
                                            <children>
                                                <Label text="Members" styleClass="stat-label" />
                                                <Label fx:id="membersLabel" text="1,893" styleClass="stat-value" />
                                                <Label text="↓ 1% this month" styleClass="stat-change negative" />
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Active Now -->
                        <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="15">
                                    <children>
                                        <VBox styleClass="stat-icon teal-lighter">
                                            <children>
                                                <SVGPath content="M20 3H4c-1.1 0-2 .9-2 2v11c0 1.1.9 2 2 2h3l-1 1v2h12v-2l-1-1h3c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z"
                                                         styleClass="icon-path" />
                                            </children>
                                        </VBox>
                                        <VBox spacing="3">
                                            <children>
                                                <Label text="Active Now" styleClass="stat-label" />
                                                <Label fx:id="activeNowLabel" text="189" styleClass="stat-value" />
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- All Customers Section -->
                <VBox styleClass="customers-card" spacing="20">
                    <children>
                        <!-- Header with Add Button and Search -->
                        <HBox alignment="CENTER_LEFT" spacing="15">
                            <children>
                                <Label text="All Customers" styleClass="section-title" />
                                <Label text="Active Members" styleClass="active-members-badge" />
                                <Button text="+ Add new User" styleClass="add-button" onAction="#handleAddCustomer" />

                                <Region HBox.hgrow="ALWAYS" />

                                <!-- Search Box -->
                                <HBox styleClass="search-box" alignment="CENTER_LEFT" spacing="8">
                                    <children>
                                        <SVGPath content="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                                 styleClass="search-icon" />
                                        <TextField fx:id="searchField"
                                                   promptText="Search"
                                                   styleClass="search-field" />
                                    </children>
                                </HBox>

                                <!-- Sort Dropdown -->
                                <HBox styleClass="sort-box" alignment="CENTER_LEFT" spacing="8">
                                    <children>
                                        <Label text="Short by:" styleClass="sort-label" />
                                        <Label text="Newest" styleClass="sort-value" />
                                        <Label text="▼" styleClass="sort-arrow" />
                                    </children>
                                </HBox>
                            </children>
                        </HBox>

                        <!-- Table Header -->
                        <HBox spacing="20" styleClass="table-header">
                            <padding>
                                <Insets top="12" right="20" bottom="12" left="20" />
                            </padding>
                            <children>
                                <Label text="Customer Name" styleClass="header-cell"
                                       HBox.hgrow="ALWAYS" minWidth="150" prefWidth="150" maxWidth="Infinity" />
                                <Label text="Phone Number" styleClass="header-cell"
                                       HBox.hgrow="ALWAYS" minWidth="120" prefWidth="120" maxWidth="Infinity" />
                                <Label text="Email" styleClass="header-cell"
                                       HBox.hgrow="ALWAYS" minWidth="180" prefWidth="180" maxWidth="Infinity" />
                                <Label text="Language" styleClass="header-cell"
                                       HBox.hgrow="ALWAYS" minWidth="100" prefWidth="100" maxWidth="Infinity" />
                                <Label text="Status" styleClass="header-cell"
                                       minWidth="80" prefWidth="80" maxWidth="80" />
                            </children>
                        </HBox>

                        <!-- Customer List -->
                        <VBox fx:id="customerListContainer" spacing="0" styleClass="customer-list">
                            <!-- Customer rows will be loaded dynamically -->
                        </VBox>

                        <!-- Pagination -->
                        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="pagination">
                            <children>
                                <Label fx:id="paginationLabel" text="Showing data 1 to 8 of 256 entries"
                                       styleClass="pagination-info" />
                                <Region HBox.hgrow="ALWAYS" />
                                <HBox fx:id="paginationButtonsContainer" spacing="6" styleClass="pagination-buttons">
                                    <!-- Pagination buttons will be generated dynamically -->
                                </HBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </VBox>
        </content>
    </ScrollPane>
</VBox>