<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="700.0" prefWidth="1000.0" styleClass="root"
            stylesheets="@../../../css/Admin/main_layout.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.btl_oop.Controller.Admin.MainLayoutController">

    <left>
        <VBox alignment="TOP_LEFT" styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../img/img/Main_Logo.png" />
                    </image>
                    <VBox.margin>
                        <Insets bottom="50.0" left="20.0" />
                    </VBox.margin>
                </ImageView>

                <Button fx:id="btnDashboard" maxWidth="Infinity" styleClass="menu-button,menu-button-active"
                        onAction="#loadDashboard">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <ImageView fitHeight="18.0" fitWidth="18.0" preserveRatio="true">
                                <image>
                                    <Image url="@../../../img/ic_item/ic_home.png" />
                                </image>
                            </ImageView>
                            <Label text="Dashboard" />
                        </HBox>
                    </graphic>
                </Button>

                <!-- Order Management -->
                <Button fx:id="btnOrderManagement" maxWidth="Infinity" styleClass="menu-button"
                        onAction="#loadOrderManagement">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <ImageView fitHeight="18.0" fitWidth="18.0" preserveRatio="true">
                                <image>
                                    <Image url="@../../../img/ic_item/ic_menu.png" />
                                </image>
                            </ImageView>
                            <Label text="Order Management" />
                        </HBox>
                    </graphic>
                </Button>

                <!-- Inventory Management -->
                <Button fx:id="btnInventoryManagement" maxWidth="Infinity" styleClass="menu-button"
                        onAction="#loadInventoryManagement">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <ImageView fitHeight="18.0" fitWidth="18.0" preserveRatio="true">
                                <image>
                                    <Image url="@../../../img/ic_item/ic_inventory.png" />
                                </image>
                            </ImageView>
                            <Label text="Inventory Management" />
                        </HBox>
                    </graphic>
                </Button>

                <!-- Sales Reports -->
                <Button fx:id="btnSalesReports" maxWidth="Infinity" styleClass="menu-button"
                        onAction="#loadSalesReports">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <ImageView fitHeight="18.0" fitWidth="18.0" preserveRatio="true">
                                <image>
                                    <Image url="@../../../img/ic_item/ic_salereport.png" />
                                </image>
                            </ImageView>
                            <Label text="Sales Reports" />
                        </HBox>
                    </graphic>
                </Button>

                <!-- Customer Feedback -->
                <Button fx:id="btnCustomerFeedback" maxWidth="Infinity" styleClass="menu-button"
                        onAction="#loadCustomerFeedback">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <ImageView fitHeight="18.0" fitWidth="18.0" preserveRatio="true">
                                <image>
                                    <Image url="@../../../img/ic_item/ic_feedback.png" />
                                </image>
                            </ImageView>
                            <Label text="Customer Feedback" />
                        </HBox>
                    </graphic>
                </Button>

                <!-- Customer Detail -->
                <Button fx:id="btnCustomerDetail" maxWidth="Infinity" styleClass="menu-button"
                        onAction="#loadCustomerDetail">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <ImageView fitHeight="18.0" fitWidth="18.0" preserveRatio="true">
                                <image>
                                    <Image url="@../../../img/ic_item/ic_user.png" />
                                </image>
                            </ImageView>
                            <Label text="Customer Detail" />
                        </HBox>
                    </graphic>
                </Button>
            </children>
        </VBox>
    </left>

    <center>
        <BorderPane fx:id="contentArea" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>