<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" stylesheets="@../../css/Manager/PaymentProcessing.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.btl_oop.Controller.Manager.PaymentController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <children>
                <VBox spacing="5">
                    <Label styleClass="title" text="Payment Processing" />
                    <Label styleClass="subtitle" text="Complete the payment for your order" />
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="backButton" styleClass="btn-back" text="â† Back to Tables" onAction="#handleBack" />
            </children>
        </HBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED" BorderPane.alignment="CENTER">
            <content>
                <HBox alignment="CENTER" spacing="30">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
            
            <!-- Left Panel: Payment Methods -->
            <VBox spacing="20" styleClass="left-panel">
                <!-- Success Message -->
                <VBox fx:id="successMessageContainer" spacing="10" styleClass="success-message">
                    <Label fx:id="successIconLabel" styleClass="success-icon" text="âœ“" />
                    <Label fx:id="successTitleLabel" styleClass="success-title" text="Invoice Printed Successfully" />
                    <Label fx:id="successSubtitleLabel" styleClass="success-subtitle" text="Customer has reviewed the order" />
                </VBox>
                
                <!-- Payment Method Selection -->
                <VBox spacing="20" styleClass="payment-methods-section">
                    <Label styleClass="section-title" text="Payment Method" />
                    <VBox spacing="15">
                        <!-- Card Payment -->
                        <HBox fx:id="cardPaymentOption" styleClass="payment-option">
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <Label styleClass="payment-icon" text="ðŸ’³" />
                                    <Label styleClass="payment-title" text="Credit/Debit Card" />
                                </HBox>
                                <Label styleClass="payment-description" text="Visa, Mastercard, American Express" />
                            </VBox>
                            <Button fx:id="cardButton" onAction="#handlePaymentMethod" styleClass="payment-method-btn" text="Select" userData="card" />
                        </HBox>
                        
                        <!-- Cash Payment -->
                        <HBox fx:id="cashPaymentOption" styleClass="payment-option">
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <Label styleClass="payment-icon" text="ðŸ’µ" />
                                    <Label styleClass="payment-title" text="Cash" />
                                </HBox>
                                <Label styleClass="payment-description" text="Physical currency payment" />
                            </VBox>
                            <Button fx:id="cashButton" onAction="#handlePaymentMethod" styleClass="payment-method-btn" text="Select" userData="cash" />
                        </HBox>
                        
                        <!-- Mobile Payment -->
                        <HBox fx:id="mobilePaymentOption" styleClass="payment-option">
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <Label styleClass="payment-icon" text="ðŸ“±" />
                                    <Label styleClass="payment-title" text="Mobile Wallet" />
                                </HBox>
                                <Label styleClass="payment-description" text="Apple Pay, Google Pay, Samsung Pay" />
                            </VBox>
                            <Button fx:id="mobilePayButton" onAction="#handlePaymentMethod" styleClass="payment-method-btn" text="Select" userData="mobile" />
                        </HBox>
                    </VBox>
                </VBox>
                
            </VBox>
            
            <!-- Right Panel: Payment Summary -->
            <VBox spacing="20" styleClass="right-panel">
                <VBox prefHeight="500.0" prefWidth="380.0" spacing="25" styleClass="payment-summary-card">
                    <!-- Header -->
                    <VBox spacing="8" styleClass="summary-header">
                        <Label styleClass="summary-title" text="Payment Summary" />
                        <Label styleClass="summary-subtitle" text="Review your order details" />
                    </VBox>
                    
                    <!-- Order Info -->
                    <VBox spacing="15" styleClass="order-info-section">
                        <HBox spacing="20" alignment="CENTER_LEFT">
                            <Label styleClass="info-icon" text="ðŸ½ï¸" />
                            <VBox spacing="5">
                                <Label styleClass="summary-label" text="Table Number" />
                                <Label fx:id="tableNumberLabel" styleClass="summary-value-large" text="#1" />
                            </VBox>
                        </HBox>
                        <HBox spacing="20" alignment="CENTER_LEFT">
                            <Label styleClass="info-icon" text="ðŸ“„" />
                            <VBox spacing="5">
                                <Label styleClass="summary-label" text="Order ID" />
                                <Label fx:id="billIdLabel" styleClass="summary-value-large" text="BILL-001" />
                            </VBox>
                        </HBox>
                    </VBox>

                    <Line styleClass="summary-separator" />
                    
                    <!-- Bill Breakdown -->
                    <VBox spacing="15" styleClass="bill-breakdown">
                        <Label styleClass="breakdown-title" text="Bill Breakdown" />
                        <VBox spacing="12">
                            <HBox spacing="20" alignment="CENTER_LEFT">
                                <Label styleClass="summary-label" text="Subtotal" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Label fx:id="subtotalLabel" styleClass="summary-value" text="\$0.0" />
                            </HBox>
                            <HBox spacing="20" alignment="CENTER_LEFT">
                                <Label styleClass="summary-label" text="Tax (10%)" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Label fx:id="taxLabel" styleClass="summary-value" text="\$0.0" />
                            </HBox>
                            <Line styleClass="breakdown-separator" />
                            <HBox spacing="20" alignment="CENTER_LEFT">
                                <Label styleClass="total-label" text="Total Amount" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Label fx:id="totalLabel" styleClass="total-value" text="\$0.0" />
                            </HBox>
                        </VBox>
                    </VBox>
                    
                    <!-- Payment Method -->
                    <VBox spacing="15" styleClass="payment-method-summary">
                        <Label styleClass="method-title" text="Selected Payment Method" />
                        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="method-display">
                            <Label fx:id="selectedMethodIcon" styleClass="method-icon-large" text="ðŸ“±" />
                            <VBox spacing="5">
                                <Label fx:id="selectedMethodLabel" styleClass="method-text-large" text="Mobile Wallet" />
                                <Label styleClass="method-description" text="Apple Pay, Google Pay, Samsung Pay" />
                            </VBox>
                            <Region HBox.hgrow="ALWAYS" />
                            <Label styleClass="selected-badge" text="âœ“" />
                        </HBox>
                    </VBox>

                    <Region VBox.vgrow="ALWAYS" />

                    <!-- Process Button -->
                    <VBox alignment="CENTER" >
                        <Button fx:id="processPaymentButton" onAction="#handleProcessPayment" styleClass="process-payment-btn" text="Process MOBILE Payment" maxWidth="Infinity" mnemonicParsing="false" />
                    </VBox>

                </VBox>
            </VBox>
                </HBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
